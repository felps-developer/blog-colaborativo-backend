        "/api/posts": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "Listar todos os posts",
                "description": "Retorna uma lista paginada de posts",
                "operationId": "8df9da181b2cd154c46f22fee36fd7eb",
