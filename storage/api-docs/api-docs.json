    "components": {
        "schemas": {
            "LoginDto": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "description": "Email do usuário",
                        "type": "string",
                        "format": "email",
                        "example": "joao@example.com"
                    },
                    "password": {
                        "description": "Senha do usuário",
                        "type": "string",
                        "format": "password",
                        "example": "senha123"
                    }
                },
                "type": "object"
            },
            "RegisterDto": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "description": "Nome do usuário",
                        "type": "string",
                        "example": "João Silva"
                    },
                    "email": {
                        "description": "Email do usuário",
                        "type": "string",
                        "format": "email",
                        "example": "joao@example.com"
                    },
                    "password": {
                        "description": "Senha do usuário (mínimo 6 caracteres)",
                        "type": "string",
                        "format": "password",
                        "example": "senha123"
                    }
                },
                "type": "object"
            },
            "CreatePostDto": {
                "required": [
                    "title",
                    "content"
                ],
                "properties": {
                    "title": {
                        "description": "Título do post",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Meu Primeiro Post"
                    },
                    "content": {
                        "description": "Conteúdo do post em formato JSON (markdown com várias edições)",
                        "type": "object",
                        "example": {
                            "version": "1.0",
                            "content": "# Título\\n\\nConteúdo do post..."
                        }
                    }
                },
                "type": "object"
            },
            "UpdatePostDto": {
                "properties": {
                    "title": {
                        "description": "Título do post",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Meu Post Atualizado"
                    },
                    "content": {
                        "description": "Conteúdo do post em formato JSON (markdown com várias edições)",
                        "type": "object",
                        "example": {
                            "version": "1.1",
                            "content": "# Título Atualizado\\n\\nConteúdo atualizado..."
                        }
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Autorização padrão JWT"
            }
        }
    },
